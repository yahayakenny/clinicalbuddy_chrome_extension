{
  "manifest_version": 3,
  "name": "ClinicalBuddy",
  "version": "0.1.1",
  "description": "ClinicalBuddy Chrome extension: GP-focused clinical reading assistant for guidelines and articles.",
  "permissions": ["sidePanel", "tabs", "activeTab", "scripting"],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": { "service_worker": "background.js" },
  "side_panel": { "default_path": "sidepanel.html" },
  "action": {
    "default_title": "Open ClinicalBuddy",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png"
    }
  }
}
